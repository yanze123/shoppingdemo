extends ..layout

block content
	.container
		.row
			form.form-horizontal(method="post", action="/admin/commodity")
				.form-group
					labal.col-sm-3.control-label(for="inputName") 手机名称
					.col-sm-10
						input#inputName.form-control(type="text", name="cammodity[name]")
				.form-group
					labal.col-sm-3.control-label(for="inputPrice") 手机价格
					.col-sm-10
						input#inputPrice.form-control(type="text", name="cammodity[price]")
				.form-group
          			label.col-sm-1.control-label(for="imgSrc") 图片上传
          			.col-sm-10
            			input#imgSrc(type="file",name="imgSrc")
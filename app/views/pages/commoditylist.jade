extends ../layout

block content
  .container
    .row
      table.table.table-hover.table-bordered
        thead
          tr
            th 名字
            th 价格
            th 时间
            th 查看
            th 更新
            th 删除
        tbody
           each item in commodities
              tr(class="item-id-#{item._id}")
                td #{item.name}
                td #{item.price}
                td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
                td: a(target="_blank",href="../commodity/#{item._id}") 查看
                td: a(target="_blank",href="../commodity/update/#{item._id}") 修改
                td
                  button.btn.btn-danger.del(type="button",data-id="#{item._id}") 删除
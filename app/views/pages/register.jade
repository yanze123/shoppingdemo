extends ../layout

block content
	.container
		.row
			.col-md-5
				form(method="POST", action="/user/register")
					.modal-body
						.form-group
							label(for="registerName") 用户名
							input#registerName.form-control(name="user[name]",type="text")
						.form-group
							label(for="registerPassword") 密码
							input#registerPassword.form-control(name="user[password]",type="password")
						.modal-footer
							button.btn.btn-default(type="button", data-dismiss="modal") 关闭
							button.btn.btn-success(type="submit") 提交